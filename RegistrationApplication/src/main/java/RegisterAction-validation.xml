<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE validators PUBLIC "-//Apache Struts//XWork Validator 1.0.3//EN" "http://struts.apache.org/dtds/xwork-validator-1.0.3.dtd">
<!-- 1) <validator type="requiredstring">-It will check both i,e NULL Check 
	and Empty check. 2)<validator type="required">-It will check only NULL check -->
<validators>
	<validator type="requiredstring">
		<param name="fieldName">firstName</param>
		<message>First Name is required</message>
	</validator>

	<validator type="requiredstring">
		<param name="fieldName">lastName</param>
		<message>Last Name is required</message>
	</validator>

	<validator type="required">
		<param name="fieldName">gender</param>
		<message>Gender is Required</message>
	</validator>

	<validator type="required">
		<param name="fieldName">age</param>
		<message>Age is Required</message>
	</validator>

	<validator type="int">
		<param name="fieldName">age</param>
		<param name="min">18</param>
		<message>Age should be above ${min}</message>
	</validator>

	<!-- <validator type="requiredstring"> <param name="fieldName">email</param> 
		<message>Email is required</message> </validator> <validator type="email"> 
		<param name="fieldName">email</param> <message>Hey dude please provide a 
		valid email</message> </validator> -->
	<field name="email">
		<field-validator type="requiredstring">
			<message>Email is required</message>
		</field-validator>
		<field-validator type="email">
			<message>Hey dude please provide a valid email</message>
		</field-validator>
	</field>
</validators>